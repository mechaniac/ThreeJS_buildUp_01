{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@core/*": ["src/core/*"],
      "@systems/*": ["src/systems/*"],
      "@controls/*": ["src/controls/*"],
      "@objects/*": ["src/objects/*"]
    }
  },
  "include": ["src"]
}
